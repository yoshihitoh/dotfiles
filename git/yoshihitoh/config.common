[core]
	editor = nvim
# pager = delta --plus-color="#012800" --minus-color="#340001" --theme="Dracula"
	pager = delta --color-only --theme OneHalfDark

[alias]
	ad = add
	ap = add -p
	br = branch
	co = checkout
	st = status
	sw = switch

[interactive]
	diffFilter = delta --color-only --theme OneHalfDark

[merge]
	tool = vimdiff
